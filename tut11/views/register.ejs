<!-- views/register.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
  </head>
  <body>
    <h1>Sign Up</h1>
    <% if (error) { %>
    <p style="color: red"><%= error %></p>
    <% } %>
    <form action="/register" method="post">
      <label for="username">Username:</label>
      <input
        type="text"
        id="username"
        name="username"
        value="<%= username %>"
        required
      />
      <br />
      <label for="password">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= password %>"
        required
      />
      <br />
      <label for="reenterPassword">Re-enter Password:</label>
      <input
        type="password"
        id="reenterPassword"
        name="reenterPassword"
        required
      />
      <br />
      <button type="submit">Sign Up</button>
    </form>
  </body>
</html>
